{% layout "layout.liquid" %} {% block content %}
<div class="container">
<a href="/index/">Go Back</a><br>
{{ showCard.name }}<br>
<img src="{{ showCard.img }}"><br>
Player Class: {{ showCard.playerClass }}<br>
Card Type: {{ showCard.type }}<br>
Card Text: {{ showCard.text }}<br>
</div>
<div>
    <form action="/users/add" method="POST">
    <input type="submit" value="Add To Collection:"/>
    <select id="card">
    <option value="name">Miracle Rogue</option>    
    </select>
</form>
</div>
<div>
    <a href="/index/{{ showCard._id }}/edit"><button>Edit</button></a>
</div>
<div class="comments">
    {{ showCard.comments }}
</div>









{% endblock %}